{% extends 'base.html.twig' %}

{% block title %}Modification de profil{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="mt-5 mb-5 text-center">Modification du profil de l'utilisateur #{{ user.id }}</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.firstName, {
                    label: 'Pr√©nom'
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastName, {
                    label: 'Nom'
                }) }}
            </div>
        </div>
        {{ form_row(form.email) }}
        <button class="btn btn-lg btn-block btn-primary" type="submit">
            Modifier
        </button>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}