{% extends 'base.html.twig' %}

{% block title %}Profil de l'utilisateur{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-6 mx-auto text-center">
        <h1 class="my-5">Profil</h1>

        <img src="images/djib.jpg" alt="" class="w-100 shadow rounded-circle" />

        <h2 class="lead"> {{ app.user.email }} </h2>

        <hr>

        <h2 class="lead"> {{ app.user.firstName}} {{ app.user.lastName }} </h2>

        <p><a href="{{ path('app_compte_edit') }}">Changer son profil</a> | <a href="#">Changer son mot de passe</a></p>
    </div>
</div>

{% endblock %}
