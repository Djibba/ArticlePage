{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 class="text-center pt-5">Reinitialiser votre mot de passe</h1>
        <div class="pt-3 pb-5 text-muted text-center">
            <small>
                Entrer votre adresse email et un lien de reinitialisation vous sera envoy√©  
            </small>
        </div>
        <div class="form-group">
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <button class="btn btn-primary btn-lg btn-block">Envoyer</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
</div>
{% endblock %}