{% extends 'base.html.twig' %}

{% block title %}S'incrire{% endblock %}

{% block body %}

    <div class="row">

        <div class="col-md-6 mx-auto">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-error" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="text-center my-5 mb-3">Créer un compte</h1>

            {{ form_start(registrationForm) }}

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                </div>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de Passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    label: "Conditions d'utilisation"
                }) }}

                <button type="submit" class="btn btn-primary btn-lg btn-block" formnovalidate>Créer</button>
            {{ form_end(registrationForm) }}
        </div>

    </div>
    
{% endblock %}
